{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center mt-5 mb-4">Modifier mon mot de passe</h1>
    <div class="row justify-content-center">
        <div class="col-4 bg-dark p-4  rounded-3">
            <div>{{ error }}</div>
            <form method="post">
                <div class="mt-1">
                    <label for="form_mail" class="form-label">Ancien mot de passe</label>
                    <input type="password" name="ancien_password" class="form-control bg-dark text-light">
                </div>
                <div class="mt-3">
                    <label for="form_mail" class="form-label">Nouveau mot de passe</label>
                    <input type="password" name="new_password" class="form-control bg-dark text-light">
                </div>
                <div class="mt-3">
                    <label for="form_mail" class="form-label">Confirmer le nouveau mot de passe</label>
                    <input type="password" name="conf_new_password" class="form-control bg-dark text-light">
                </div>
                <div class="row justify-content-center">
                        <button type="submit" class="btn btn-danger mt-4 col-5">Modifier</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}