{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="col-6 offset-3 mt-5 mb-5">
            <h1 class="text-center">Choisir votre quizz
                {% if app.user %}
                    <a class="btn btn-lg" href="{{ path("quizCreate") }}"><i class="fas fa-plus addIcon"></i></a>
                {% endif %}
            </h1>
        </div>
        <div class="card-group">
            {% for category in categories %}
                <a href="{{ path('category_show', {'id': category.id }) }}">
                    <div class="card m-1 bg-dark text-light category_card--hover">
                        <div class="card-body">
                            <div class="card-title">
                                {{ category.name }}
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
