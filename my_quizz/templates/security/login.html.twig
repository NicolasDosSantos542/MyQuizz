{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col mt-5 bg-dark p-4 rounded-3">
                <div class="row justify-content-center mt-3 mb-3 text-center">
                    <h1>Connexion</h1>
                </div>
                <form action="{{ path('security_login') }}" method="POST">
                    <div class="form-group mt-4">
                        <label for="_username">Adresse E-mail</label>
                        <input type="text" class="form-control bg-dark text-light" required name="_username">
                    </div>
                    <div class="form-group mt-4">
                        <label for="_username">Mot de passe</label>
                        <input type="password" class="form-control bg-dark text-light" required name="_password">
                    </div>
                    <div class="row justify-content-center mt-3">
                        <button type="submit" class="btn btn-success mt-4 col-4">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}