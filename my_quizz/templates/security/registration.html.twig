{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col mt-5 bg-dark p-4 rounded-3">
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-4">
                        <h1>
                            Inscription
                        </h1>
                    </div>
                </div>
                {{ form_start(form) }}
                <div>
                    {{ form_errors(form.mail) }}
                    {{ form_errors(form.username) }}
                    {{ form_errors(form.password) }}
                    {{ form_errors(form.confirm_password) }}
                </div>
                <div class="mt-3">
                    <label for="form_mail" class="form-label">E-mail</label>
                    {{ form_widget(form.mail, {'attr' : {'class' : 'form-control bg-dark text-light'}}) }}
                </div>
                <div class="mt-3">
                    <label for="form_username" class="form-label">Nom d'utilisateur</label>
                    {{ form_widget(form.username, {'attr' : {'class' : 'form-control bg-dark text-light'}}) }}
                </div>
                <div class="mt-3">
                    <label for="form_password" class="form-label">Mot de passe</label>
                    {{ form_widget(form.password, {'attr' : {'class' : 'form-control bg-dark text-light'}}) }}
                </div>
                <div class="mt-3">
                    <label for="form_confirm_password" class="form-label">Confirmation du mot de passe</label>
                    {{ form_widget(form.confirm_password, {'attr' : {'class' : 'form-control bg-dark text-light'}}) }}
                </div>
                <div class="row justify-content-center mt-3">
                    <button type="submit" class="btn btn-success mt-4 col-5">Valider mon inscription</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}